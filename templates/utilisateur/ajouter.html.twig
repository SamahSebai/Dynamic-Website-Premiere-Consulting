{% extends 'baseBack.html.twig' %}

{% block title %}Ajouter Utilisateur{% endblock %}
 {% block head %}
     <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
 {% endblock %}
{% block body %}
    <div class="card card-custom gutter-b example example-compact">
        <div class="card-header">
            <h3 class="card-title">Ajouter un Utilisateur</h3>
        </div>
        {{ form_start(form) }}


        <div class="card-body">
            <div class="panel-heading">
                <h4>  {{user.username}}</h4>
            </div>

            <div class="form-group">
                <label>Pseudo :</label>
                {{ form_widget(form.username ,{'attr':{'class':"form-control form-control-solid",'placeholder':"Entrer le pseudo"}})}}
            </div>
            <div class="form-group">
                <label>Nom :</label>
                {{ form_widget(form.nom ,{'attr':{'class':"form-control form-control-solid",'placeholder':"Entrer le nom"}})}}
            </div>
            <div class="form-group">
                <label>Prenom :</label>
                {{ form_widget(form.prenom ,{'attr':{'class':"form-control form-control-solid",'placeholder':"Entrer le prenom "}})}}</div>
            <div class="form-group">
                <label>Telephone :</label>
                {{ form_widget(form.telephone,{'attr':{'class':"form-control form-control-solid",'type':"tel" ,'id':"phone",' name':"phone",'placeholder':"Entrer l'etat de service"}})}}
            </div>
            <div class="form-group">
                <label>Adress :</label>
                {{ form_widget(form.adress ,{'attr':{'class':"form-control form-control-solid",'placeholder':"Entrer l'adress"}})}}
            </div>
            <div class="form-group">
                <label>Email :</label>
                {{ form_widget(form.email, {'attr': {'class': 'form-control form-control-solid','name':'user[email]' ,'id':'user_email' ,'placeholder':'Votre Email'}}) }}
            </div>
            <div class="form-group">
                <label>Entreprise :</label>
                {{ form_widget(form.entreprise, {'attr': {'class': 'form-control form-control-solid','name':'entreprise' ,'id':'entreprise' ,'placeholder':'entreprise'}}) }}
            </div>
            <div class="form-group">
                <label>Mot de passe :</label>
                {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control form-control-solid','name':'user[plainPassword][second]' ,'id':'user_plainPassword_first' ,'placeholder':'Votre mot de passe'}}) }}
            </div>
            <div class="form-group">
                <label>Repeter mot de passe :</label>
                {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control form-control-solid','name':'user[plainPassword][first]' ,'id':'user_plainPassword_second' ,'placeholder':'Repeter votre mot de passe'}}) }}
            </div>
            <div class="form-group">
                <label>Role :</label>
                {{ form_widget(form.role)}}
            </div>


            <div class="card-footer">
                <button type="submit" class="btn btn-primary mr-2">Enregistrer</button>
                <button type="reset" class="btn btn-secondary"><a href="{{ path('user')  }}">Retourner au liste</a></button>
            </div>

        </div>

        {{ form_rest(form) }}
        {{ form_end(form) }}


        <!--end::Form-->
    </div>




{% endblock %}

{% block javascripts %}

{% endblock %}