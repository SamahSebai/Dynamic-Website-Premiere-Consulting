{% extends 'baseBack.html.twig' %}

{% block title %}New Article{% endblock %}
 {% block head %}
     <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
 {% endblock %}
{% block body %}
    <div class="card card-custom gutter-b example example-compact">
        <div class="card-header">
            <h3 class="card-title">cree un nouveau service</h3>
        </div>
        {{ form_start(form) }}


        <div class="card-body">
            <div class="form-group">
                <label>Nom :</label>
                {{ form_widget(form.nom ,{'attr':{'class':"form-control form-control-solid",'placeholder':"Entrer le nom"}})}}
            </div>
            <div class="form-group">
                <label>Description :</label>
                {{ form_widget(form.description ,{'attr':{'class':"form-control form-control-solid",'placeholder':"Entrer la description "}})}}</div>
            <div class="form-group">
                <label>Etat :</label>
                {{ form_widget(form.etat ,{'attr':{'class':"form-control form-control-solid",'placeholder':"Entrer l'etat de service"}})}}
            </div>

            <div class="form-group ">
                <label>Prix :</label>
                    {{ form_widget(form.prix ,{'attr':{ 'class':"form-control form-control-solid" ,'placeholder':"Entrer le prix"}})}}
            </div>
            <div class="form-group">
                <label>Referance :</label>
                {{ form_widget(form.referance ,{'attr':{'class':"form-control form-control-solid",'placeholder':"Entrer la reference"}})}}
            </div>

            <div class="form-group" >
                <label class="">Date :</label>
                <div class="col-lg-4 col-md-9 col-sm-12">
                    <div class="input-group date" id="kt_datetimepicker_6" data-target-input="nearest">
                        {{ form_widget(form.date ,{'attr':{'class':"form-control datetimepicker-input",'data-target':"#kt_datetimepicker_6"}}) }}
                        <div class="input-group-append" data-target="#kt_datetimepicker_6" data-toggle="datetimepicker">
															<span class="input-group-text">
																<i class="ki ki-calendar"></i>
															</span>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary mr-2">Enregistrer</button>
            <button type="reset" class="btn btn-secondary"><a href="{{ path('services') }}">Retourner au liste</a></button>
        </div>

        {{ form_rest(form) }}
        {{ form_end(form) }}


        <!--end::Form-->
    </div>



    <script>
        jQuery(document).ready(function(){


            $('#kt_datetimepicker_6').datetimepicker ({format:'YYYY-MM-DD HH:mm'}); }

        );</script>
    <script>
        "use strict";
        // Class definition
        var KTKBootstrapTouchspin = function() {

            // Private functions
            var demos = function() {
                // minimum setup
                $('#kt_touchspin_1, #kt_touchspin_2_1').TouchSpin({
                    buttondown_class: 'btn btn-secondary',
                    buttonup_class: 'btn btn-secondary',

                    min: 0,
                    max: 100,
                    step: 0.1,
                    decimals: 2,
                    boostat: 5,
                    maxboostedstep: 10,
                });

            }

            return {
                // public functions
                init: function() {
                    demos();
                }
            };
        }();

        jQuery(document).ready(function() {
            KTKBootstrapTouchspin.init();
        });
    </script>

{% endblock %}

