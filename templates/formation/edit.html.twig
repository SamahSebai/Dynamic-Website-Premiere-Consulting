{% extends 'baseBack.html.twig' %}
{% block title %}Modifier Formation{% endblock %}
 {% block head %}
     <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet"
           integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
 {% endblock %}


{% block body %}
    <div class="card card-custom gutter-b example example-compact">
        <div class="card-header">
            <h3 class="card-title">Modifier Formation</h3>
        </div>

        {{ form_start(form) }}


        <div class="card-body">
            <div class="form-group">
                <label>Intitule-Mission:</label>
                {{ form_widget(form.intitule_mission ,{'attr':{'class':"form-control form-control-solid",'placeholder':"Entrer un intitule_mission"}}) }}
            </div>
            <div class="form-group">
                <label>Nombre de jours</label>
                {{ form_widget(form.nb_de_jour ,{'attr':{'class':"form-control form-control-solid",'placeholder':"Entrer Nombre de jours "}}) }}
            </div>

            <div class="form-group">
                <label class="">date_debut :</label>
                <div class="col-lg-4 col-md-9 col-sm-12">
                    <div class="input-group date" id="kt_datetimepicker_6" data-target-input="nearest">
                        {{ form_widget(form.date_debut ,{'attr':{'class':"form-control datetimepicker-input",'data-target':"#kt_datetimepicker_6"}}) }}
                        <div class="input-group-append" data-target="#kt_datetimepicker_6" data-toggle="datetimepicker">
															<span class="input-group-text">
																<i class="ki ki-calendar"></i>
															</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="">date_fin :</label>
                <div class="col-lg-4 col-md-9 col-sm-12">
                    <div class="input-group date" id="kt_datetimepicker_7" data-target-input="nearest">
                        {{ form_widget(form.date_fin ,{'attr':{'class':"form-control datetimepicker-input",'data-target':"#kt_datetimepicker_7"}}) }}
                        <div class="input-group-append" data-target="#kt_datetimepicker_7" data-toggle="datetimepicker">
															<span class="input-group-text">
																<i class="ki ki-calendar"></i>
															</span>
                        </div>
                    </div>
                </div>
            </div>

    <div class="form-group">
        <label>Localisation mission</label>
        {{ form_widget(form.localisation_mission ,{'attr':{'class':"form-control form-control-solid",'placeholder':"Entrer une localisation "}}) }}
    </div>
    <div class="form-group">
        <label>cout provisoire</label>
        {{ form_widget(form.cout_provisoire,{'attr':{'class':"form-control form-control-solid",'placeholder':"Entrer la cout provisoire "}}) }}
    </div>
    <div class="form-group">
        <label>Description</label>
        {{ form_widget(form.description ,{'attr':{'class':"form-control form-control-solid",'placeholder':"Entrer une description "}}) }}
    </div>
  {#  <div class="form-group">
        <label>Utilisateur</label>
        {{ form_widget(form.User ,{'attr':{'class':"form-control form-control-solid",'placeholder':"Entrer un utilisateur "}}) }}
    </div>

            <div class="form-group">
                <label>Utilisateur</label>
                {{ form_widget(form.User ,{'attr':{'class':"form-control form-control-solid",'placeholder':"Entrer un Utilisateur"}})}}
            </div>
#}
    <div class="form-group">
        <label>Images</label>
        {{ form_widget(form.media ,{'attr':{'class':"form-control form-control-solid" }}) }}
    </div>
    </div>
    </div>

    <div class="card-footer">
        <button type="submit" class="btn btn-primary mr-2">Enregistrer</button>
        <button type="reset" class="btn btn-secondary"><a href="{{ path('article') }}">Retourner au liste</a></button>
    </div>


    {{ form_rest(form) }}
    {{ form_end(form) }}


    <!--end::Form-->
    </div>
    </div>
    <script>
        jQuery(document).ready(function () {


                $('#kt_datetimepicker_6').datetimepicker({format: 'YYYY-MM-DD HH:mm'});
            }
        );</script>
    <script>
        jQuery(document).ready(function () {


                $('#kt_datetimepicker_7').datetimepicker({format: 'YYYY-MM-DD HH:mm'});
            }
        );</script>

{% endblock %}
