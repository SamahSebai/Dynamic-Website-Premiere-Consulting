{% extends 'baseBack.html.twig' %}

{% block title %}New Offre{% endblock %}
{% block head %}
     <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
 {% endblock %}
{% block body %}
    <div class="card card-custom gutter-b example example-compact">
        <div class="card-header">
            <h3 class="card-title">Ajouter une Offre</h3>
        </div>
    {{ form_start(form) }}
  <div class="card-body">
            <div class="form-group">
                <label>Type</label>
                {{ form_widget(form.type ,{'attr':{'class':"form-control form-control-solid",'placeholder':"Entrer le type"}})}}
            </div>
      <div class="form-group">
          <label>Titre</label>
          {{ form_widget(form.titre ,{'attr':{'class':"form-control form-control-solid",'placeholder':"Entrer le titre"}})}}
      </div>
            <div class="form-group">
                <label>Nombre</label>
                {{ form_widget(form.nombre ,{'attr':{'class':"form-control form-control-solid",'placeholder':"Entrer un nombre "}})}}</div>
            <div class="form-group">
                <label>Description </label>
                {{ form_widget(form.description ,{'attr':{'class':"form-control form-control-solid",'placeholder':"Entrer une description"}})}}
            </div>

      <div class="form-group" >
          <label class="">Date :</label>
          <div class="col-lg-4 col-md-9 col-sm-12">
              <div class="input-group date" id="kt_datetimepicker_6" data-target-input="nearest">
                  {{ form_widget(form.date,{'attr':{'class':"form-control datetimepicker-input",'data-target':"#kt_datetimepicker_6"}}) }}
                  <div class="input-group-append" data-target="#kt_datetimepicker_6" data-toggle="datetimepicker">
															<span class="input-group-text">
																<i class="ki ki-calendar"></i>
															</span>
                  </div>
              </div>
          </div>
      </div>


      <div class="form-group">
                <label>Qualification </label>
                {{ form_widget(form.qualification ,{'attr':{'class':"form-control form-control-solid",'placeholder':"Entrer les qualifications"}})}}
      </div>
     <div class="form-group">
                <label>Experience </label>
                {{ form_widget(form.experience ,{'attr':{'class':"form-control form-control-solid",'placeholder':"Entrer l'experience"}})}}
     </div>

        <div class="card-footer">
            <button type="submit" class="btn btn-primary mr-2">Enregistrer</button>
            <button type="reset" class="btn btn-secondary"><a href="{{ path('offres_index') }}">Retourner au liste</a></button>
        </div>

        {{ form_rest(form) }}
        {{ form_end(form) }}
        <script>
            jQuery(document).ready(function () {


                    $('#kt_datetimepicker_6').datetimepicker({format: 'YYYY-MM-DD HH:mm:ss'});
                }
            );</script>
  </div>
    </div>


{% endblock %}
