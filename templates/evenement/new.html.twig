{% extends 'baseBack.html.twig' %}

{% block title %}New Evenement{% endblock %}
{% block head %}
     <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
 {% endblock %}
{% block body %}
    <div class="card card-custom gutter-b example example-compact">
        <div class="card-header">
            <h3 class="card-title">Ajouter une évènement</h3>
        </div>
    {{ form_start(form) }}

 <div class="card-body">
                    <div class="form-group">
                        <label>Description</label>
             {{ form_widget(form.description ,{'attr':{'class':"form-control form-control-solid",'placeholder':"Entrer une description"}})}}
                    </div>
                     <div class="card-body">
                    <div class="form-group">
                        <label>Delais</label>
             {{ form_widget(form.delais ,{'attr':{'class':"form-control form-control-solid",'placeholder':"Entrer le delais"}})}}
                    </div>
                    
                    <div class="form-group" >
                        <label class="">Date début :</label>
                        <div class="col-lg-4 col-md-9 col-sm-12">
                            <div class="input-group date" id="kt_datetimepicker_6" data-target-input="nearest">
                                {{ form_widget(form.date_debut ,{'attr':{'class':"form-control datetimepicker-input",'data-target':"#kt_datetimepicker_6"}}) }}
                                <div class="input-group-append" data-target="#kt_datetimepicker_6" data-toggle="datetimepicker">
															<span class="input-group-text">
																<i class="ki ki-calendar"></i>
															</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="form-group" >
                        <label class="">Date fin :</label>
                        <div class="col-lg-4 col-md-9 col-sm-12">
                            <div class="input-group date" id="kt_datetimepicker_6" data-target-input="nearest">
                                {{ form_widget(form.date_fin ,{'attr':{'class':"form-control datetimepicker-input",'data-target':"#kt_datetimepicker_6"}}) }}
                                <div class="input-group-append" data-target="#kt_datetimepicker_6" data-toggle="datetimepicker">
															<span class="input-group-text">
																<i class="ki ki-calendar"></i>
															</span>
                                </div>
                            </div>
                        </div>
                    </div>
                     <div class="form-group">
                        <label>Theme</label>
             {{ form_widget(form.theme ,{'attr':{'class':"form-control form-control-solid",'placeholder':"Entrer le theme"}})}}
                    </div>
  <div class="form-group">
                <label>Titre</label>
                {{ form_widget(form.titre,{'attr':{'class':"form-control form-control-solid",'placeholder':"Entrer un titre"}})}}
            </div>

            
 <div class="form-group">
                <label>type</label>
                {{ form_widget(form.type ,{'attr':{'class':"form-control form-control-solid",'placeholder':"Entrer un titre"}})}}
            </div>

 <div class="form-group">
                <label>Localisation</label>
                {{ form_widget(form.localisation ,{'attr':{'class':"form-control form-control-solid",'placeholder':"Entrer une localisation"}})}}
            </div>
            <div class="form-group">
                <label>Utilisateur</label>
                {{ form_widget(form.User ,{'attr':{'class':"form-control form-control-solid",'placeholder':"Entrer un Utilisateur"}})}}
            </div>
 <div class="form-group">
                <label>Formation</label>
                {{ form_widget(form.Formation ,{'attr':{'class':"form-control form-control-solid",'placeholder':"Choisir une formation"}})}}
            </div>


            </div>
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary mr-2">Enregistrer</button>
                    <button type="reset" class="btn btn-secondary"><a href="{{ path('evenement_index') }}">Retourner au liste</a></button>
                </div>

        {{ form_rest(form) }}
        {{ form_end(form) }}


        <!--end::Form-->
        </div>



    <script>
        jQuery(document).ready(function(){


            $('#kt_datetimepicker_6').datetimepicker ({format:'YYYY-MM-DD HH:mm'}); }

        );</script>

    {% endblock %}