{% extends 'baseBack.html.twig' %}

{% block title %}Modifier Partenaire{% endblock %}
{% block head %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
{% endblock %}
{% block body %}
    <div class="card card-custom gutter-b example example-compact">
        <div class="card-header">
            <h3 class="card-title">Modifier Partenaire</h3>
        </div>

        {{ form_start(form) }}

        <div class="card-body">
            <div class="form-group">
                <label class="text-dark font-weight-bolder  d-block my-1 font-size-lg">Nom</label>
                {{ form_widget(form.nom ,{'attr':{'class':"form-control form-control-solid",'placeholder':"Entrer une description"}}) }}
            </div>
            <div class="form-group">
                <label class="text-dark font-weight-bolder  d-block my-1 font-size-lg">Adresse</label>
                {{ form_widget(form.adress ,{'attr':{'class':"form-control form-control-solid",'placeholder':"Entrer une description"}}) }}
            </div>
            <div class="form-group">
                <label class="text-dark font-weight-bolder  d-block my-1 font-size-lg">Localisation</label>
                {{ form_widget(form.localisation,{'attr':{'class':"form-control form-control-solid",'placeholder':"Entrer une description"}}) }}
            </div>
            <div class="form-group">
                <label class="text-dark font-weight-bolder  d-block my-1 font-size-lg" >Téléphone</label>
                {{ form_widget(form.telephone ,{'attr':{'class':"form-control form-control-solid",'placeholder':"Entrer une description"}}) }}
            </div>
            <div class="form-group">
                <label class="text-dark font-weight-bolder  d-block my-1 font-size-lg" >Email</label>
                {{ form_widget(form.email ,{'attr':{'class':"form-control form-control-solid",'placeholder':"Entrer une description"}}) }}
            </div>
            <div class="form-group">
                <label class="text-dark font-weight-bolder  d-block my-1 font-size-lg" >Responsable</label>
                {{ form_widget(form.responsable ,{'attr':{'class':"form-control form-control-solid",'placeholder':"Entrer une description"}}) }}
            </div>
            <div class="form-group">
                <label class="text-dark font-weight-bolder  d-block my-1 font-size-lg" >Type</label>
                {{ form_widget(form.type ,{'attr':{'class':"form-control form-control-solid",'placeholder':"Entrer une description"}}) }}
            </div>
            <div class="form-group">
                <label class="text-dark font-weight-bolder  d-block my-1 font-size-lg">Secteur d'activité</label>
                {{ form_widget(form.secteur_activite ,{'attr':{'class':"form-control form-control-solid",'placeholder':"Entrer une description"}}) }}
            </div>
            <div class="form-group">
                <label class="text-dark font-weight-bolder  d-block my-1 font-size-lg" >Description</label>
                {{ form_widget(form.description ,{'attr':{'class':"form-control form-control-solid",'placeholder':"Entrer une description"}}) }}
            </div>

            <div class="form-group">
                <td class="pl-0">
                    <div class="text-dark font-weight-bolder  d-block my-1 font-size-lg">Image</div>

                </td>
                {{ form_widget(form.image) }}

            </div>
        </div>

    </div>
    <div class="card-footer">
        <button type="submit" class="btn btn-primary mr-2">Enregistrer</button>
        <button type="reset" class="btn btn-secondary"><a href="{{ path('partenaire_index') }}">Retourner au liste</a>
        </button>
    </div>

    {{ form_rest(form) }}
    {{ form_end(form) }}

{% endblock %}
