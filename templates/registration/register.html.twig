{%extends "base.html.twig"%}

{% block head%}
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    {% block title %}{% endblock %}

    <!-- Font Icon -->
    <link rel="stylesheet" href="{{asset('asset/css/material-design-iconic-font.min.css')}}">

    <!-- Main css -->
    <link rel="stylesheet" href="{{asset('asset/css/app.css')}}">
{%endblock%}
{% block body%}
    <div class="main">

        <section class="signup">
            <!-- <img src="images/signup-bg.jpg" alt=""> -->
            <div class="container">
                <div class="signup-content">
                    <form method="POST" id="signup-form" class="signup-form" enctype="multipart/form-data">
                        <h2 class="form-title">Créer un compte</h2>
                        {{ form_start(form) }}
                        <div class="form-group">
                            {{ form_widget(form.nom, {'attr': {'class': "form-input",'name':"nom" ,'id':"name" ,'placeholder':"Votre nom"}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_widget(form.prenom, {'attr': {'class': "form-input",'name':"prenom" ,'id':"name" ,'placeholder':"Votre prénom"}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_widget(form.username, {'attr': {'class': 'form-input','name':'username' ,'id':'name' ,'placeholder':'Nom utilisateur'}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_widget(form.entreprise, {'attr': {'class': 'form-input','name':'entreprise' ,'id':'name' ,'placeholder':'Entreprise'}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_widget(form.telephone, {'attr': {'class': 'form-input','name':'telephone' ,'id':'name' ,'placeholder':'telephone'}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_widget(form.adress, {'attr': {'class': 'form-input','name':'adress' ,'id':'name' ,'placeholder':'adress'}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_widget(form.email, {'attr': {'class': 'form-input','name':'email' ,'id':'email' ,'placeholder':'Votre Email'}}) }}
                        </div>

                        <div class="form-group">
                            {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-input' ,'placeholder':'Mot de passe'}}) }}
                            <span toggle="#registration_plainPassword_first" class="zmdi zmdi-eye field-icon toggle-password"></span>
                        </div>
                        <div class="form-group">
                            {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-input' ,'placeholder':'Répétez votre mot de passe'}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_widget(form.photo, {'attr': {'class': 'form-input','type':'image'}}) }}
                        </div>


                        <div class="form-group">
                            <button type="submit" name="submit" id="submit" class="form-submit" value="Sign up"> S'inscrire</button>
                        </div>





                       {#  <div style="display: none">
                        {{form_rest(form)}}
                         </div>#}
                        {{ form_end(form) }}
                    </form>
                    <p class="loginhere">
                        Vous avez déjà un compte ? <a href="{{ path('fos_user_security_login') }}" class="loginhere-link">Connectez-vous ici</a>
                    </p>
                </div>
            </div>
        </section>

    </div>

{%endblock%}
{% block javascripts %}

    <script src="{{asset('asset/js/jquery.min.js')}}"></script>
    <script src="{{asset('asset/js/main.js')}}"></script>
{% endblock %}