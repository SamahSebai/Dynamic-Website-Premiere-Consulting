{% extends 'baseBack.html.twig' %}

{% block title %}Nouvelle categorie{% endblock %}
 {% block head %}
     <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
 {% endblock %}
{% block body %}
    <div class="card card-custom gutter-b example example-compact">
        <div class="card-header">
            <h3 class="card-title">cree une nouvelle categorie</h3>
        </div>
        {{ form_start(form) }}


        <div class="card-body">
            <div class="form-group">
                <label>Nom :</label>
                {{ form_widget(form.nom ,{'attr':{'class':"form-control form-control-solid",'placeholder':"Entrer le nom"}})}}
            </div>

            <div class="form-group">
                <label>Parent :</label>
                {{ form_widget(form.parent ,{'attr':{'class':"form-control form-control-solid",'placeholder':"Entrer l'etat de service"}})}}
            </div>






        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary mr-2">Enregistrer</button>
            <button type="reset" class="btn btn-secondary"><a href="{{ path('categorie') }}">Retourner au liste</a></button>
        </div>

        {{ form_rest(form) }}
        {{ form_end(form) }}


        <!--end::Form-->
    </div>





{% endblock %}

{% block javascripts %}

{% endblock %}