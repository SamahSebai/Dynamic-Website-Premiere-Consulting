{% if pageCount > 1 %}
    <div class="pagination d-flex justify-content-between align-items-center flex-wrap">
        <div class="d-flex flex-wrap py-2 mr-3">
        </div>
        <div class="d-flex flex-wrap py-2 mr-3">
            {% if first is defined and current != first %}
                <span class="first">
                <a href="{{ path(route, query|merge({(pageParameterName): first})) }}" class="btn btn-light btn-lg back-to-top btn-sm btn-light-primary mr-2 my-1"><i class="ki ki-bold-double-arrow-back icon-xs"></i></a>
            </span>
            {% endif %}

            {% if previous is defined %}
                <span class="previous">
                <a href="{{ path(route, query|merge({(pageParameterName): previous})) }}" class="btn btn-light btn-lg back-to-top btn-sm btn-light-primary mr-2 my-1"><i class="ki ki-bold-arrow-back icon-xs"></i></a>
            </span>
            {% endif %}

            {% for page in pagesInRange %}
                {% if page != current %}
                    <span class="page">
                    <a href="{{ path(route, query|merge({(pageParameterName): page})) }}"  class="btn btn-light btn-lg back-to-top btn-sm border-0 btn-hover-primary mr-2 my-1">{{ page }}</a>
                </span>
                {% else %}
                    <span  class="btn btn-light btn-lg back-to-top btn-sm border-0 btn-hover-primary active mr-2 my-1" style="background-color: #d91a5b;color:white;">{{ page }}</span>
                {% endif %}
            {% endfor %}

            {% if next is defined %}
                <span class="next">
                <a href="{{ path(route, query|merge({(pageParameterName): next})) }}" class="btn btn-light btn-lg back-to-top btn-sm btn-light-primary mr-2 my-1"><i class="ki ki-bold-arrow-next icon-xs"></i></a>
            </span>
            {% endif %}

            {% if last is defined and current != last %}
                <span class="last">
                <a href="{{ path(route, query|merge({(pageParameterName): last})) }}" class="btn btn-light btn-lg back-to-top btn-sm btn-light-primary mr-2 my-1"><i class="ki ki-bold-double-arrow-next icon-xs"></i></a>
           </span>
            {% endif %}
        </div>
    </div>
{% endif %}